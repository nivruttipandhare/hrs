                        <div class="card-body text-center">
                            <h5 class="fw-bold mb-3">Ocean View Paradise</h5>
                            <a href="#" class="btn btn-primary w-75">View Details</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Map Section -->
    <section class="map-section py-5">
        <div class="container">
            <h2 class="fw-bold text-center mb-4 text-dark">Find Hotels Near You</h2>
            <div class="map-container">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d242347.1025176785!2d72.74109938496972!3d19.08219783973039!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3be7b63fd7f264d5%3A0xe4bc053ecbd3a60b!2sMumbai%2C%20Maharashtra!5e0!3m2!1sen!2sin!4v1621843638353!5m2!1sen!2sin" allowfullscreen="" loading="lazy" style="border:0; width: 100%; height: 100%;"></iframe>
