<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Edit Hotel</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
</head>
<body>
  <%- include('../adminDashboard', { user: user }) %>

  <div class="container mt-5">
    <h3 class="mb-4 text-center">Edit Hotel - <%= hotel.hotel_name %></h3>

    <form action="/admin/hotelMaster/edit/<%= hotel.hotel_id %>" method="POST" enctype="multipart/form-data" class="p-4 bg-light rounded shadow-sm">
      <input type="hidden" name="existing_image" value="<%= hotel.hotel_image %>" />

      <div class="row g-3">
        <div class="col-md-6">
          <label for="hotel_name" class="form-label">Hotel Name</label>
          <input type="text" id="hotel_name" name="hotel_name" class="form-control" value="<%= hotel.hotel_name %>" required />
        </div>

        <div class="col-md-6">
          <label for="hotel_email" class="form-label">Email</label>
          <input type="email" id="hotel_email" name="hotel_email" class="form-control" value="<%= hotel.hotel_email %>" required />
        </div>

        <div class="col-md-6">
          <label for="hotel_contact" class="form-label">Contact</label>
          <input type="text" id="hotel_contact" name="hotel_contact" class="form-control" value="<%= hotel.hotel_contact %>" required />
        </div>

        <div class="col-md-6">
          <label for="rating" class="form-label">Rating</label>
          <input type="number" step="0.1" id="rating" name="rating" class="form-control" value="<%= hotel.rating %>" required />
        </div>

        <div class="col-md-6">
          <label for="reviewcount" class="form-label">Review Count</label>
          <input type="number" id="reviewcount" name="reviewcount" class="form-control" value="<%= hotel.reviewcount %>" required />
        </div>

        <div class="col-md-6">
          <label for="city_id" class="form-label">City</label>
          <select id="city_id" name="city_id" class="form-select" required>
            <option value="">Select City</option>
            <% cities.forEach(city => { %>
              <option value="<%= city.city_id %>" <%= city.city_id === hotel.city_id ? 'selected' : '' %>><%= city.city_name %></option>
            <% }) %>
          </select>
        </div>

        <div class="col-md-6">
          <label for="area_id" class="form-label">Area</label>
          <select id="area_id" name="area_id" class="form-select" required>
            <option value="">Select Area</option>
            <% areas.forEach(area => { %>
              <option value="<%= area.area_id %>" <%= area.area_id === hotel.area_id ? 'selected' : '' %>><%= area.area_name %></option>
            <% }) %>
          </select>
        </div>

        <div class="col-md-6">
          <label for="hotel_image" class="form-label">Hotel Image</label>
          <% if (hotel.hotel_image) { %>
            <div class="mb-2">
<img src="/uploads/hotels/<%= hotel.hotel_image %>" width="100" height="80" alt="Hotel Image" />
            </div>
          <% } %>
          <input type="file" id="hotel_image" name="hotel_image" class="form-control" accept="image/*" />
        </div>

        <div class="col-12 text-end">
          <button type="submit" class="btn btn-primary">Update Hotel</button>
        </div>
      </div>
    </form>
  </div>
</body>
</html>
