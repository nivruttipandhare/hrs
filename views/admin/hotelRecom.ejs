<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Hotel Recommendations</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .card-img-top {
      height: 200px;
      object-fit: cover;
    }
    .badge-booked {
      position: absolute;
      top: 10px;
      right: 10px;
    }
  </style>
</head>
<body>
  <div class="container mt-5">
    <h2 class="text-center mb-4 text-primary">Recommended Hotels</h2>

    <% if (recommendations.length === 0) { %>
      <div class="alert alert-info text-center">No hotel recommendations available.</div>
    <% } else { %>
      <div class="row">
        <% recommendations.forEach(hotel => { %>
          <div class="col-md-4 mb-4">
            <div class="card shadow position-relative h-100">
              <% if (hotel.is_booked_by_user) { %>
                <span class="badge bg-success badge-booked">Booked</span>
              <% } %>
              <% if (hotel.hotel_image) { %>
                <img src="/Uploads/hotels/<%= hotel.hotel_image %>" class="card-img-top" alt="Hotel Image">
              <% } else { %>
                <img src="https://via.placeholder.com/400x200?text=No+Image" class="card-img-top" alt="No Image">
              <% } %>
              <div class="card-body">
                <h5 class="card-title text-primary"><%= hotel.hotel_name %></h5>
                <p class="card-text">
                  <strong>City:</strong> <%= hotel.city_name %><br>
                  <strong>Area:</strong> <%= hotel.area_name %><br>
                  <strong>Rating:</strong> <%= hotel.rating %> ‚≠ê<br>
                  <strong>Reviews:</strong> <%= hotel.reviewcount %>
                </p>
                <hr>
                <p>
                  <strong>Amenities:</strong><br>
                  <%= hotel.amenities ? hotel.amenities.split(',').join(', ') : 'None listed' %>
                </p>
                <p>
                  <strong>Room Types:</strong><br>
                  <%= hotel.room_types ? hotel.room_types.split(',').join(', ') : 'Not specified' %>
                </p>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>
</body>
</html>
