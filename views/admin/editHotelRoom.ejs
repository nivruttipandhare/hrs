<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Edit Hotelâ€‘Roomâ€‘Price</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

  <!-- Admin sidebar / nav -->
  <%- include('../adminDashboard') %>

  <div class="container my-5" style="max-width: 600px;">
    <h3 class="text-primary mb-4 text-center">Edit Hotelâ€‘Roomâ€‘Price</h3>

    <!-- ðŸ”§ Update form -->
    <form action="/admin/hotelRooms/update/<%= current.hotel_id %>/<%= current.room_id %>" method="POST" class="card p-4 shadow-sm">

      <!-- Select Hotel -->
      <div class="mb-3">
        <label class="form-label">Hotel</label>
        <select name="hotel_id" class="form-select" required>
          <% hotels.forEach(h => { %>
            <option value="<%= h.hotel_id %>" <%= h.hotel_id === current.hotel_id ? 'selected' : '' %>>
              <%= h.hotel_name %>
            </option>
          <% }) %>
        </select>
      </div>

      <!-- Select Room Type -->
      <div class="mb-3">
        <label class="form-label">Room Type</label>
        <select name="room_id" class="form-select" required>
          <% rooms.forEach(r => { %>
            <option value="<%= r.room_id %>" <%= r.room_id === current.room_id ? 'selected' : '' %>>
              <%= r.room_type %>
            </option>
          <% }) %>
        </select>
      </div>

      <!-- Price -->
      <div class="mb-3">
        <label class="form-label">Price</label>
        <input type="number" name="price" value="<%= current.price %>" class="form-control" required>
      </div>

      <!-- Buttons -->
      <div class="d-flex justify-content-between">
        <a href="/admin/hotelRooms" class="btn btn-secondary">
          <i class="bi bi-arrow-left"></i>Â Back
        </a>
        <button class="btn btn-success">
          <i class="bi bi-save"></i>Â Update
        </button>
      </div>
    </form>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
