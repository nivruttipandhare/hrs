<!DOCTYPE html>
<html>
<head>
  <title>Review Master</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
</head>
<body>
  <!-- Admin Dashboard Include -->
  <%- include('../adminDashboard', { user: user }) %>
  <small><%= user.username %></small>

  <div class="container mt-5">
    <h2 class="mb-4">Review Master</h2>

    <form action="/admin/add-review" method="POST" class="mb-4">
      <div class="row mb-2">
        <div class="col">
          <input type="text" name="rev_text" class="form-control" placeholder="Review Text" required>
        </div>
        <div class="col">
          <input type="number" step="0.1" name="rating" class="form-control" placeholder="Rating" required>
        </div>
        <div class="col">
          <input type="number" name="userid" class="form-control" placeholder="User ID" required>
        </div>
        <div class="col">
          <input type="number" name="hotel_id" class="form-control" placeholder="Hotel ID" required>
        </div>
        <div class="col">
          <button type="submit" class="btn btn-success">Add Review</button>
        </div>
      </div>
    </form>

    <table class="table table-bordered">
      <thead class="table-light">
        <tr>
          <th>Review ID</th>
          <th>Review Text</th>
          <th>Rating</th>
          <th>Date</th>
          <th>Hotel</th>
          <th>User ID</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% reviews.forEach(r => { %>
          <tr>
            <td><%= r.rev_id %></td>
            <td><%= r.rev_text %></td>
            <td><%= r.rating %></td>
            <td><%= r.rev_date.toLocaleString() %></td>
            <td><%= r.hotel_name %></td>
            <td><%= r.userid %></td>
            <td>
              <form action="/admin/delete-review/<%= r.rev_id %>" method="POST" onsubmit="return confirm('Delete this review?');">
                <button class="btn btn-danger btn-sm">Delete</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
