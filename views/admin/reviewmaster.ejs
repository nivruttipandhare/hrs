<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Review Master</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Bootstrap 5 -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    body {
      background: #f7fcff;
      padding-bottom: 100px;
    }
    .table thead {
      background: #0d6efd;
      color: #fff;
    }
    .search-bar {
      max-width: 300px;
    }
    footer {
      position: fixed;
      bottom: 0;
      left: 0;
      width: 100%;
      background: linear-gradient(to right, #0066ff, #6600cc);
      color: white;
      text-align: center;
      padding: 10px 0;
      font-size: 14px;
    }
  </style>
</head>
<body>

  <!-- Include Admin Sidebar/Header -->
  <%- include('../adminDashboard') %>

  <div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2">
      <h3 class="text-primary">All Reviews</h3>
      <input type="text" id="searchInput" class="form-control search-bar" placeholder="ðŸ” Search reviews...">
    </div>

    <!-- Review Table -->
    <div class="table-responsive">
      <table class="table table-bordered text-center" id="reviewTable">
        <thead>
          <tr>
            <th>Review ID</th>
            <th>Hotel</th>
            <th>User</th>
            <th>Rating</th>
            <th>Review</th>
            <th>Date</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody id="reviewBody">
          <% reviews.forEach(r => { %>
            <tr>
              <td><%= r.rev_id %></td>
              <td><%= r.hotel_name %></td>
              <td><%= r.username %></td>
              <td><%= r.rating %></td>
              <td><%= r.rev_text %></td>
              <td><%= new Date(r.rev_date).toLocaleString() %></td>
              <td>
                <!-- DELETE FORM -->
                <form action="/admin/reviewMaster/<%= r.rev_id %>?_method=DELETE"
      method="POST"
      onsubmit="return confirm('Delete review <%= r.rev_id %>?');">
  <button class="btn btn-sm btn-danger">Delete</button>
</form>

              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

    <!-- Pagination -->
    <nav><ul class="pagination justify-content-center" id="pagination"></ul></nav>
  </div>

  <!-- Footer -->
  <footer>Â© 2025 Admin Panel. All rights reserved.</footer>

  <!-- Search & Pagination Script -->
  <script>
    const rowsPerPage = 5;
    const tbody = document.getElementById("reviewBody");
    const pagination = document.getElementById("pagination");
    const searchInput = document.getElementById("searchInput");
    let currentPage = 1;
    let rows = Array.from(tbody.querySelectorAll("tr"));

    function renderTable() {
      const filter = searchInput.value.toLowerCase();
      const filteredRows = rows.filter(row =>
        row.innerText.toLowerCase().includes(filter)
      );
      tbody.innerHTML = "";
      const start = (currentPage - 1) * rowsPerPage;
      const end = start + rowsPerPage;
      filteredRows.slice(start, end).forEach(row => tbody.appendChild(row));
      renderPagination(filteredRows.length);
    }

    function renderPagination(totalRows) {
      pagination.innerHTML = "";
      const totalPages = Math.ceil(totalRows / rowsPerPage);
      for (let i = 1; i <= totalPages; i++) {
        const li = document.createElement("li");
        li.className = `page-item ${i === currentPage ? "active" : ""}`;
        li.innerHTML = `<a class="page-link" href="#">${i}</a>`;
        li.addEventListener("click", (e) => {
          e.preventDefault();
          currentPage = i;
          renderTable();
        });
        pagination.appendChild(li);
      }
    }

    searchInput.addEventListener("input", () => {
      currentPage = 1;
      renderTable();
    });

    renderTable();
  </script>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
