<!DOCTYPE html>
<html>
<head>
  <title>City Master</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
</head>
<body>
     <!-- Admin Dashboard Include -->
   <!-- âœ… Correct Include -->
<%- include('../adminDashboard', { user: user }) %>

    


  <div class="container mt-5">
    <h2 class="mb-4">City Master</h2>

    <!-- Add City Form -->
    <form action="/admin/add-city" method="POST" class="mb-4">
      <div class="row">
        <div class="col-md-4">
          <input type="text" name="city_name" pattern="^[A-Za-z ]+$" class="form-control" placeholder="Enter City Name" required>
        </div>
        <div class="col-md-4">
          <input type="text" name="pincode" class="form-control" pattern="^[1-9][0-9]{5}$"
 placeholder="Enter Pincode" required pattern="\d{6}">
        </div>
        <div class="col-md-4">
          <button type="submit" class="btn btn-primary w-100">Add City</button>
        </div>
      </div>
    </form>

    <!-- Search Form -->
    <form method="GET" action="/admin/city" class="mb-4">
      <div class="row">
        <div class="col-md-8">
          <input type="text" name="search" class="form-control" placeholder="Search City" value="<%= search || '' %>">
        </div>
        <div class="col-md-4">
          <button type="submit" class="btn btn-secondary w-100">Search</button>
        </div>
      </div>
    </form>

    <!-- City Table -->
    <table class="table table-bordered">
      <thead class="table-light">
        <tr>
          <th>City ID</th>
          <th>City Name</th>
          <th>Pincode</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% if (!cities || cities.length === 0) { %>
          <tr>
            <td colspan="4" class="text-center">No cities found.</td>
          </tr>
        <% } else { %>
          <% cities.forEach(city => { %>
            <tr>
              <td><%= city.city_id %></td>
              <td><%= city.city_name %></td>
              <td><%= city.pincode %></td>
              <td>
                <form action="/admin/delete-city/<%= city.city_id %>" method="POST" onsubmit="return confirm('Delete this city?');">
                  <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                </form>
              </td>
            </tr>
          <% }); %>
        <% } %>
      </tbody>
    </table>
  </div>
</body>
</html>
