<!-- views/admin/editBooking.ejs -->
<!DOCTYPE html>
<html>
<head>
  <title>Edit Booking</title>
  <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
</head>
<body class="p-4">
  <%- include('../adminDashboard') %>
  <div class="container">
    <h2>Edit Booking</h2>
    <form action="/api/bookings/<%= booking.booking_id %>?_method=PUT" method="POST">
      <!-- You can use method-override middleware for PUT -->

      <input type="hidden" name="userid" value="<%= booking.userid %>">
      <input type="hidden" name="hotel_id" value="<%= booking.hotel_id %>">

      <div class="mb-3">
        <label>Booking Date</label>
        <input type="date" class="form-control" name="booking_date" value="<%= booking.booking_date.toISOString().split('T')[0] %>">
      </div>

      <div class="mb-3">
        <label>Check-in Date</label>
        <input type="date" class="form-control" name="checkin_date" value="<%= booking.checkin_date.toISOString().split('T')[0] %>">
      </div>

      <div class="mb-3">
        <label>Check-in Time</label>
        <input type="time" class="form-control" name="checkin_time" value="<%= booking.checkin_time %>">
      </div>

      <div class="mb-3">
        <label>Check-out Date</label>
        <input type="date" class="form-control" name="checkout_date" value="<%= booking.checkout_date.toISOString().split('T')[0] %>">
      </div>

      <div class="mb-3">
        <label>Check-out Time</label>
        <input type="time" class="form-control" name="checkout_time" value="<%= booking.checkout_time %>">
      </div>

      <button type="submit" class="btn btn-primary">Update Booking</button>
    </form>
  </div>
</body>
</html>
