<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Edit Booking</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>

  <!-- âœ… Include Admin Dashboard and pass user -->
  <%- include('../adminDashboard', { user: user }) %>
  

  <div class="container mt-5">
    <h2 class="mb-4 text-success">Edit Booking - ID: <%= booking.booking_id %></h2>

    <form action="/admin/bookings/edit/<%= booking.booking_id %>" method="POST">
      <div class="row">
        <!-- Check-in Date -->
        <div class="col-md-6 mb-3">
          <label for="checkin_date" class="form-label">Check-in Date</label>
          <input 
            type="date" 
            id="checkin_date" 
            name="checkin_date" 
            class="form-control"
            value="<%= booking.checkin_date ? new Date(booking.checkin_date).toISOString().split('T')[0] : '' %>"
            required
          >
        </div>

        <!-- Check-in Time -->
        <div class="col-md-6 mb-3">
          <label for="checkin_time" class="form-label">Check-in Time</label>
          <input 
            type="time" 
            id="checkin_time" 
            name="checkin_time" 
            class="form-control" 
            value="<%= booking.checkin_time %>" 
            required
          >
        </div>
      </div>

      <div class="row">
        <!-- Check-out Date -->
        <div class="col-md-6 mb-3">
          <label for="checkout_date" class="form-label">Check-out Date</label>
          <input 
            type="date" 
            id="checkout_date" 
            name="checkout_date" 
            class="form-control"
            value="<%= booking.checkout_date ? new Date(booking.checkout_date).toISOString().split('T')[0] : '' %>"
            required
          >
        </div>

        <!-- Check-out Time -->
        <div class="col-md-6 mb-3">
          <label for="checkout_time" class="form-label">Check-out Time</label>
          <input 
            type="time" 
            id="checkout_time" 
            name="checkout_time" 
            class="form-control" 
            value="<%= booking.checkout_time %>" 
            required
          >
        </div>
      </div>

      <!-- Buttons -->
      <div class="d-flex justify-content-between mt-4">
        <a href="/admin/bookings" class="btn btn-secondary">Cancel</a>
        <button type="submit" class="btn btn-primary">Update Booking</button>
      </div>
    </form>
  </div>
</body>
</html>
