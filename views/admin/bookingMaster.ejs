<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Bookings</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .card-img-top {
      height: 200px;
      object-fit: cover;
    }
    body {
      background-color: #f8f9fa;
    }
  </style>
</head>
<body class="bg-light">
  <div class="container mt-5">
    <h2 class="text-center mb-4 text-success">All Hotel Bookings</h2>
    <% if (error) { %>
      <div class="alert alert-danger text-center"><%= error %></div>
    <% } %>
    <div class="row">
      <% if (bookings && bookings.length) { %>
        <% bookings.forEach(booking => { %>
          <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
              <% if (booking.hotel_image) { %>
                <img src="/Uploads/hotels/<%= booking.hotel_image %>" class="card-img-top" alt="Hotel Image">
              <% } else { %>
                <img src="https://via.placeholder.com/400x200?text=No+Image" class="card-img-top" alt="No Image Available">
              <% } %>
              <div class="card-body">
                <h5 class="card-title text-primary"><%= booking.hotel_name %></h5>
                <p class="card-text">
                  <strong>User:</strong> <%= booking.username %><br>
                  <strong>Booking Date:</strong> <%= new Date(booking.booking_date).toLocaleDateString() %><br>
                  <strong>Check-In:</strong> <%= new Date(booking.checkin_date).toLocaleDateString() %> at <%= booking.checkin_time %><br>
                  <strong>Check-Out:</strong> <%= new Date(booking.checkout_date).toLocaleDateString() %> at <%= booking.checkout_time %>
                </p>
              </div>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <div class="col-12 text-center">
          <p class="text-muted">No bookings found.</p>
        </div>
      <% } %>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>