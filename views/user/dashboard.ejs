    <div class="container my-5">
        <h2 class="text-center mb-5 heading-custom">Available Hotels</h2>

        <% if (typeof error !== 'undefined' && error) { %>
            <div class="alert alert-danger text-center"><%= error %></div>
        <% } %>

        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            <% if (hotels && Array.isArray(hotels) && hotels.length) { %>
                <% hotels.forEach(hotel => { %>
                    <div class="col">
                        <div class="card h-100 shadow-sm">
                            <% if (hotel.hotel_image) { %>
                                <img src="/Uploads/hotels/<%= hotel.hotel_image %>" class="card-img-top" alt="Hotel Image" />
                            <% } else { %>
                                <div class="card-img-top d-flex align-items-center justify-content-center bg-light" style="height: 200px;">
                                    <span class="text-muted fs-4"><i class="bi bi-image"></i> No Image</span>
                                </div>
                            <% } %>
                            <div class="card-body">
                                <h5 class="card-title"><%= hotel.hotel_name || 'Unknown Hotel' %></h5>
                                <p class="card-text mb-2">
                                    <i class="bi bi-envelope-fill text-info"></i> <strong>Email:</strong> <%= hotel.hotel_email || 'N/A' %><br>
                                    <i class="bi bi-telephone-fill text-info"></i> <strong>Contact:</strong> <%= hotel.hotel_contact || 'N/A' %><br>
                                    <i class="bi bi-star-fill text-warning"></i> <strong>Rating:</strong> <%= hotel.rating || 0 %> ‚≠ê (<%= hotel.reviewcount || 0 %> Reviews)
                                </p> 
                                <div class="mt-auto d-flex gap-2">
                                    <button type="button" class="btn btn-sm btn-primary view-details flex-grow-1" data-hotel-id="<%= hotel.hotel_id %>">
                                        <i class="bi bi-info-circle me-1"></i> View Details
                                    </button>
                                    <button type="button" class="btn btn-sm btn-success book-now flex-grow-1" data-hotel-id="<%= hotel.hotel_id %>" data-hotel-name="<%= hotel.hotel_name || 'Unknown Hotel' %>">
                                        <i class="bi bi-journal-bookmark-fill me-1"></i> Book Now
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="col-12 text-center text-muted py-5">
                    <p class="fs-5"><i class="bi bi-x-circle-fill me-2"></i> No hotels available at the moment. Please try again later.</p>
                </div>
            <% } %>
        </div>
