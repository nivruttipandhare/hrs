        :root {
            --primary-color: #4B0082; /* Rich Indigo */
            --secondary-color: #FF6F61; /* Vibrant Coral */
            --accent-color: #FFD700; /* Golden Yellow */
            --neutral-bg: #F8F1E9; /* Soft Ivory */
            --dark-color: #1C2526; /* Deep Navy */
            --text-light: #FFFFFF; /* White for text */
        }

        body {
            font-family: 'Poppins', sans-serif;
            background-color: var(--neutral-bg);
            line-height: 1.6;
        }

        /* Navbar */
        .navbar {
            background: linear-gradient(45deg, var(--primary-color), var(--secondary-color));
            padding: 1rem 0;
            transition: all 0.3s ease;
        }

        .navbar-brand img {
            transition: transform 0.3s ease;
        }

        .navbar-brand:hover img {
            transform: scale(1.1);
        }

        .navbar .btn-outline-light {
            border-color: var(--accent-color);
            color: var(--accent-color);
        }

        .navbar .btn-outline-light:hover {
            background: var(--accent-color);
            color: var(--dark-color);
        }

        .navbar .btn-warning {
            background: var(--accent-color);
            color: var(--dark-color);
            border: none;
        }

        .navbar .btn-warning:hover {
            background: var(--secondary-color);
            color: var(--text-light);
        }

        /* Hero Section */
        .hero-section {
            position: relative;
            height: 80vh;  /* just increased from 70vh to 80vh */
            min-height: 450px;  /* slightly increased minimum height */
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
        }

        .hero-img {
            position: absolute;
            width: 100%;
            height: 100%;
            object-fit: cover;
           /* filter: brightness(100%); */
            /* transition: transform 0.5s ease; */
        }

        .hero-section:hover .hero-img {
            transform: scale(1.05);
        }

        .overlay {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0, 0, 0, 0.5);
        }

        .hero-content {
            position: relative;
            z-index: 2;
            text-align: center;
            color: var(--text-light);
            padding: 2rem;
        }

        .hero-content .btn {
            background: var(--secondary-color);
            border: none;
            transition: background 0.3s ease;
        }

        .hero-content .btn:hover {
            background: var(--accent-color);
            color: var(--dark-color);
        }

        /* Hotel Cards */
        .hotel-card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            border-radius: 15px;
            overflow: hidden;
            background: var(--text-light);
        }

        .hotel-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2);
        }

        .hotel-card img {
            height: 200px;
            object-fit: cover;
        }

        .hotel-details {
            padding: 1.5rem;
        }

        .rating {
            color: var(--accent-color);
            margin-bottom: 0.5rem;
        }

        .hotel-details .btn {
            background: var(--primary-color);
            border: none;
        }

        .hotel-details .btn:hover {
            background: var(--secondary-color);
        }

        /* Map Section */
        .map-container {
            height: 400px;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
            margin-bottom: 2rem;
            border: 2px solid var(--secondary-color);
        }

        /* Footer */
        footer {
            background-color: var(--dark-color);
            color: var(--text-light);
            padding: 2rem 0;
        }

        footer a {
            color: var(--accent-color);
            transition: color 0.3s ease;
        }

        footer a:hover {
            color: var(--secondary-color);
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .hero-section {
                height: 50vh;
                min-height: 300px;
            }

            .hero-content h1 {
                font-size: 2rem;
            }

            .hero-content p {
                font-size: 1rem;
            }

            .hotel-card img {
                height: 150px;
            }

            .map-container {
                height: 300px;
            }
        }

        @media (max-width: 576px) {
            .navbar-brand {
                font-size: 1.2rem;
            }

            .hero-content h1 {
                font-size: 1.5rem;
            }

            .hero-content p {
                font-size: 0.9rem;
            }
        }
    </style>
