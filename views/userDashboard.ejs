<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>User Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    body {
      background-color: #f8f9fa;
      font-family: 'Arial', sans-serif;
    }
    .navbar-brand i {
      font-size: 1.5rem;
    }
    .card img {
      object-fit: cover;
      height: 200px;
      width: 100%;
    }
    .carousel-item img {
      height: 500px;
      object-fit: cover;
    }
    footer {
      background-color: #343a40;
      color: white;
      padding: 40px 0;
    }
    .footer-content {
      display: flex;
      justify-content: space-between;
      flex-wrap: wrap;
      gap: 20px;
    }
    .footer-content > div {
      flex: 1;
      min-width: 200px;
      padding: 15px;
    }
    .modal-lg {
      max-width: 600px;
    }
    .amenities-list {
      list-style-type: none;
      padding-left: 0;
    }
    .amenities-list li::before {
      content: '‚úì ';
      color: #28a745;
    }
    @media (max-width: 768px) {
      .carousel-item img {
        height: 300px;
      }
      .carousel-caption {
        display: block !important;
        font-size: 0.9rem;
      }
    }
  </style>
</head>
<body>

  <div class="container mt-3 d-none">
    <pre>Debug: Hotels = <%= JSON.stringify(hotels, null, 2) %></pre>
    <pre>Debug: User = <%= JSON.stringify(user, null, 2) %></pre>
  </div>

  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand d-flex align-items-center" href="/">
        <i class="bi bi-house-door-fill me-2"></i>
        <span>Hotel Finder</span>
      </a>
      <div class="ms-auto">
        <% if (user && user.username) { %>
          <span class="navbar-text me-3">Welcome, <%= user.username %></span>
          <a href="/logout" class="btn btn-outline-light">Logout</a>
        <% } else { %>
          <a href="/login" class="btn btn-outline-light me-2">Login</a>
          <a href="/register" class="btn btn-warning">Register</a>
        <% } %>
      </div>
    </div>
  </nav>

  <div id="hotelCarousel" class="carousel slide mt-3" data-bs-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img src="https://images.pexels.com/photos/635041/pexels-photo-635041.jpeg" class="d-block w-100" alt="Slider Image 1">
        <div class="carousel-caption bg-dark bg-opacity-50 rounded p-3">
          <h4 class="text-warning">The Diamond Palace</h4>
          <p class="mb-1">‚≠ê 4.5 Rating | üìç Koregaon Park, Pune</p>
          <p class="mb-0">"Excellent luxury hotel with great service!"</p>
        </div>
      </div>
      <div class="carousel-item">
        <img src="https://images.pexels.com/photos/261395/pexels-photo-261395.jpeg" class="d-block w-100" alt="Slider Image 2">
        <div class="carousel-caption bg-dark bg-opacity-50 rounded p-3">
          <h4 class="text-warning">Blue Lagoon Resort</h4>
          <p class="mb-1">‚≠ê 4.2 Rating | üìç Lonavala, Maharashtra</p>
          <p class="mb-0">"Peaceful stay with beautiful lake views!"</p>
        </div>
      </div>
      <div class="carousel-item">
        <img src="https://images.pexels.com/photos/594077/pexels-photo-594077.jpeg" class="d-block w-100" alt="Slider Image 3">
        <div class="carousel-caption bg-dark bg-opacity-50 rounded p-3">
          <h4 class="text-warning">Sunset View Inn</h4>
          <p class="mb-1">‚≠ê 4.8 Rating | üìç Marine Drive, Mumbai</p>
          <p class="mb-0">"Top-rated seafront hotel with modern amenities."</p>
        </div>
      </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#hotelCarousel" data-bs-slide="prev">
      <span class="carousel-control-prev-icon"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#hotelCarousel" data-bs-slide="next">
      <span class="carousel-control-next-icon"></span>
    </button>
  </div>

  <div class="container my-5">
    <h2 class="text-center mb-4">Available Hotels</h2>
    <% if (error) { %>
      <div class="alert alert-danger text-center"><%= error %></div>
    <% } %>
    
    <div class="row">
      <% if (hotels && Array.isArray(hotels) && hotels.length > 0) { %>
        <% hotels.forEach(hotel => { %>
          <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
              <% if (hotel.hotel_image) { %>
                <img src="/Uploads/hotels/<%= hotel.hotel_image %>" class="card-img-top" alt="Hotel Image" style="height: 200px; width: 100%; object-fit: cover;" />
              <% } else { %>
                <div class="card-img-top d-flex align-items-center justify-content-center bg-light" style="height: 200px;">
                  <span class="text-muted">No Image</span>
                </div>
              <% } %>
              <div class="card-body d-flex flex-column">
                <h5 class="card-title"><%= hotel.hotel_name || 'Unknown Hotel' %></h5>
                <p class="card-text mb-3">
                  <strong>City:</strong> <%= hotel.city_name || 'N/A' %><br>
                  <strong>Area:</strong> <%= hotel.area_name || 'N/A' %><br>
                  <strong>Email:</strong> <%= hotel.hotel_email || 'N/A' %><br>
                  <strong>Contact:</strong> <%= hotel.hotel_contact || 'N/A' %><br>
                  <strong>Rating:</strong> <%= hotel.rating || 0 %> ‚≠ê<br>
                  <strong>Reviews:</strong> <%= hotel.reviewcount || 0 %>
                </p>
                <div class="mt-auto d-flex gap-2">
                  <button class="btn btn-sm btn-primary view-details" data-hotel-id="<%= hotel.hotel_id %>">View Details</button>
                  <button class="btn btn-sm btn-success book-now" data-hotel-id="<%= hotel.hotel_id %>" data-hotel-name="<%= hotel.hotel_name || 'Unknown Hotel' %>">Book Now</button>
                </div>
              </div>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <div class="col-12 text-center text-muted">
          <p>No hotels available at the moment. Please try again later.</p>
        </div>
      <% } %>
    </div>
  </div>

  <div class="modal fade" id="viewDetailsModal" tabindex="-1" aria-labelledby="viewDetailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="viewDetailsModalLabel">Hotel Details</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <div id="hotel-details-content">Loading...</div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>

  <div class="modal fade" id="bookingModal" tabindex="-1" aria-labelledby="bookingModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="bookingModalLabel">Book Hotel</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form id="bookingForm">
            <input type="hidden" name="hotel_id" id="booking_hotel_id">
            <input type="hidden" name="hotel_name" id="booking_hotel_name">
            <input type="hidden" name="userid" id="booking_userid" value="<%= user ? user.userid : '' %>">
            <div class="mb-3">
              <label for="booking_date" class="form-label">Booking Date</label>
              <input type="date" class="form-control" id="booking_date" name="booking_date" value="<%= new Date().toISOString().split('T')[0] %>" required readonly>
            </div>
            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="checkin_date" class="form-label">Check-in Date</label>
                <input type="date" class="form-control" id="checkin_date" name="checkin_date" min="<%= new Date().toISOString().split('T')[0] %>" required>
              </div>
              <div class="col-md-6 mb-3">
                <label for="checkin_time" class="form-label">Check-in Time</label>
                <input type="time" class="form-control" id="checkin_time" name="checkin_time" required>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="checkout_date" class="form-label">Check-out Date</label>
                <input type="date" class="form-control" id="checkout_date" name="checkout_date" min="<%= new Date().toISOString().split('T')[0] %>" required>
              </div>
              <div class="col-md-6 mb-3">
                <label for="checkout_time" class="form-label">Check-out Time</label>
                <input type="time" class="form-control" id="checkout_time" name="checkout_time" required>
              </div>
            </div>
            <button type="submit" class="btn btn-primary" id="confirmBookingBtn">Confirm Booking</button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <footer>
    <div class="container footer-content">
      <div>
        <h5>About Us</h5>
        <p>We help users find the best hotels with personalized recommendations and seamless booking.</p>
      </div>
      <div class="text-center">
        <h5>Our Location</h5>
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3783.155774754125!2d73.85674361489285!3d18.520430287411!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3bc2c1b7b8b7b7b7%3A0x3b7b7b7b7b7b7b7b!2sPune%2C%20Maharashtra%2C%20India!5e0!3m2!1sen!2sin!4v1635781234567!5m2!1sen!2sin" width="100%" height="150" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
      </div>
      <div>
        <h5>Contact</h5>
        <p>Email: support@hotelfinder.com</p>
        <p>Phone: +91 98765 43210</p>
      </div>
    </div>
    <div class="text-center mt-3">
      <p class="mb-0">Developed by Hotel Finder Team ¬© 2025</p>
    </div>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  <script>
    // Helper function to handle XHR requests
    function makeXHRRequest(method, url, data, callback) {
      var xhr = new XMLHttpRequest();
      xhr.open(method, url);
      
      xhr.onload = function() {
        if (xhr.status >= 200 && xhr.status < 300) {
          try {
            var responseData = JSON.parse(xhr.responseText);
            callback(null, responseData); // Success: null for error, data for result
          } catch (e) {
            callback(new Error("Failed to parse JSON response: " + e.message), null);
          }
        } else {
          callback(new Error("HTTP error " + xhr.status + ": " + xhr.statusText), null);
        }
      };

      xhr.onerror = function() {
        callback(new Error("Network error occurred."), null);
      };

      if (data instanceof FormData) {
        xhr.send(data);
      } else if (data) {
        xhr.setRequestHeader('Content-Type', 'application/json');
        xhr.send(JSON.stringify(data));
      } else {
        xhr.send();
      }
    }

    // View Details Handler
    document.querySelectorAll('.view-details').forEach(function(button) {
      button.addEventListener('click', function() {
        var hotelId = this.dataset.hotelId;
        document.getElementById('hotel-details-content').innerHTML = 'Loading...'; // Reset content

        makeXHRRequest('GET', '/api/hotel/' + hotelId, null, function(error, data) {
          if (error) {
            console.error('View Details Error:', error);
            alert('Error fetching hotel details: ' + error.message);
            document.getElementById('hotel-details-content').innerHTML = 'Failed to load details.';
            return;
          }

          if (data && data.success) {
            var hotel = data.hotel;
            var amenitiesHtml = '<li>No amenities listed</li>';
            if (hotel.amenities && hotel.amenities.length) {
                amenitiesHtml = hotel.amenities.map(function(a) {
                    return '<li>' + a + '</li>';
                }).join('');
            }

            var content = `
              <h5>${hotel.hotel_name || 'Unknown Hotel'}</h5>
              <p>
                <strong>City:</strong> ${hotel.city_name || 'N/A'}<br>
                <strong>Area:</strong> ${hotel.area_name || 'N/A'}<br>
                <strong>Email:</strong> ${hotel.hotel_email || 'N/A'}<br>
                <strong>Contact:</strong> ${hotel.hotel_contact || 'N/A'}<br>
                <strong>Rating:</strong> ${hotel.rating || 0} ‚≠ê<br>
                <strong>Reviews:</strong> ${hotel.reviewcount || 0}<br>
                <strong>Description:</strong> ${hotel.description || 'No description available'}
              </p>
              <h6>Amenities:</h6>
              <ul class="amenities-list">
                ${amenitiesHtml}
              </ul>
            `;
            document.getElementById('hotel-details-content').innerHTML = content;
            var modal = new bootstrap.Modal(document.getElementById('viewDetailsModal'));
            modal.show();
          } else {
            alert(data && data.message ? data.message : 'Failed to fetch hotel details');
            document.getElementById('hotel-details-content').innerHTML = 'Failed to load details.';
          }
        });
      });
    });

    // Book Now Handler
    document.querySelectorAll('.book-now').forEach(function(button) {
      button.addEventListener('click', function() {
        var hotelId = this.dataset.hotelId;
        var hotelName = this.dataset.hotelName;
        var userId = document.getElementById('booking_userid').value;

        if (!userId) {
          alert('Please log in to book a hotel.');
          window.location.href = '/login';
          return;
        }

        document.getElementById('booking_hotel_id').value = hotelId;
        document.getElementById('booking_hotel_name').value = hotelName;
        var modal = new bootstrap.Modal(document.getElementById('bookingModal'));
        modal.show();
      });
    });

    // Booking Form Submission
    document.getElementById('bookingForm').addEventListener('submit', function(e) {
      e.preventDefault();
      var form = e.target;
      var confirmBtn = document.getElementById('confirmBookingBtn');
      confirmBtn.disabled = true;

      // Validate dates
      var checkinDate = new Date(form.checkin_date.value);
      var checkoutDate = new Date(form.checkout_date.value);
      var today = new Date();
      today.setHours(0, 0, 0, 0);

      if (checkinDate < today) {
        alert('Check-in date cannot be in the past.');
        confirmBtn.disabled = false;
        return;
      }
      if (checkoutDate <= checkinDate) {
        alert('Check-out date must be after check-in date.');
        confirmBtn.disabled = false;
        return;
      }

      var formData = new FormData(form);

      makeXHRRequest('POST', '/bookings/create', formData, function(error, data) {
        confirmBtn.disabled = false; // Re-enable button in both success and error

        if (error) {
          console.error('Booking Error:', error);
          alert('Error confirming booking: ' + error.message);
          return;
        }

        if (data && data.success) {
          alert(data.message);
          var modal = bootstrap.Modal.getInstance(document.getElementById('bookingModal'));
          modal.hide();
          form.reset();
          form.booking_date.value = new Date().toISOString().split('T')[0];
        } else {
          alert(data && data.message ? data.message : 'Booking failed');
        }
      });
    });
  </script>
</body>
</html>